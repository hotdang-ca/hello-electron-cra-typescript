{
  "name": "hello-electron-react-ts",
  "version": "0.1.0",
  "private": true,
  "author": "James Robert Perih <james@hotdang.ca>",
  "description": "Uploads files to the Hot Dang Interactive Personal Cloud",
  "dependencies": {
    "form-data": "^2.3.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "typescript": "3.4.2"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "appId": "com.electron.electron-with-create-react-app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "start": "nf start -p 3000",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "react-start": "react-scripts start",
    "pack": "build --dir",
    "electron-pack": "build  --config.extraMetadata.main=build/electron.js",
    "dist": "npm run build && npm run electron-pack",
    "postinstall": "install-app-deps"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron-builder": "^20.39.0",
    "foreman": "^3.0.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.1",
    "@types/react": "16.8.13",
    "@types/react-dom": "16.8.3",
    "electron": "^4.1.4",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4"
  }
}
